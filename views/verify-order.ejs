<%- include('parts/header')%>
<%- include('parts/navbar')%>

<div class="container text-center">
    <h3>Verify Order</h3>
    
    <% if(validationError && validationError.length > 0) { %>
        <div class="alert alert-danger">
            <% validationError.forEach(function(error) { %>
                <p><%= error.msg %></p>
            <% }); %>
        </div>
    <% } %>
    
    <form action="/orders" method="POST">
        <input type="hidden" name="cartId" value="<%= cart._id%>">
        <input type="hidden" name="name" value="<%= cart.name%>">
        <input type="hidden" name="price" value="<%= cart.price%>">
        <input type="hidden" name="amount" value="<%= cart.amount%>">
        <input type="hidden" name="productId" value="<%= cart.productId%>">
        <input type="hidden" name="userId" value="<%= cart.userId%>">
        
        <!-- Added required attribute for address field validation -->
        <input type="text" name="address" placeholder="Enter the Address" class="form-control" required>
        
        <input type="submit" value="Verify" class="btn btn-primary">
    </form>
</div>

<%- include('parts/footer')%>
