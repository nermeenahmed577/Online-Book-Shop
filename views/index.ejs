<%- include('parts/header') %>
<%- include('parts/navbar') %>

<div class="container">
    <form action="/" method="GET">
        <select name="category" class="form-control">
            <option value="all">All</option>
            <option value="fiction">Fiction</option>
            <option value="dystopian">Dystopian</option>
            <option value="science">Science</option>
            <option value="classic">Classic</option>
            <option value="Novel">Novels</option>
            <option value="literature">Literature</option>
        </select>
        <input type="submit" class="btn btn-primary" value="Filter">
    </form>

    <% if(products.length === 0 ) { %>
        <div class="alert alert-danger mt-3">
            There are no products.
        </div>
    <% } else { %>
        <div class="row mt-4">
            <% for(let product of products) { %>
                <div class="col col-12 col-md-6 col-lg-4 col-xl-3 mb-4">
                    <div class="card" style="width: 100%;">
                        <img src="/<%= product.image %>" class="card-img-top" style="height: 350px;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="/product/<%= product._id %>"><%= product.name %></a>
                            </h5>
                            <p>Price: <%= product.price %> $</p>
                            <form action="/cart" method="POST" class="add-to-cart-form">
                                <input type="number" name="amount" class="form-control mb-2" min="1">
                                <input type="hidden" name="name" value="<%= product.name %>">
                                <input type="hidden" name="price" value="<%= product.price %>">
                                <input type="hidden" name="productId" value="<%= product._id %>">
                                <input type="hidden" name="redirectTo" value="/">
                                <input type="submit" value="Add to cart" class="btn btn-primary w-100">
                            </form>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    <% } %>
</div>

<%- include('parts/footer') %>
